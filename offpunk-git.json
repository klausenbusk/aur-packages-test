pkgbase = offpunk-git
	pkgdesc = Fork of the command-line Gemini client AV-98 with added offline capabilities
	pkgver = 1.4.r0.g63ebb80
	pkgrel = 1
	url = https://tildegit.org/ploum/offpunk
	arch = any
	license = BSD
	makedepends = coreutils
	makedepends = git
	makedepends = python-setuptools
	depends = python
	depends = file
